{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, 
    "skipLibCheck": true, 
    "strict": true,
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./src/types", "./node_modules/@types"] // Add this line
  },
  "include": [
    "src/**/*"
, "eslint.config.js", "public/embed-widget.js"  ], 
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
